<?xml version="1.0" encoding="UTF-8"?>
<Defs>

  <!-- ==================== Flintlock Pistol ==================== -->

  <ThingDef ParentName="BaseMakeableGun">
    <defName>TA_Banzutsu</defName>
    <label>ban-zutsu</label>
    <description>Infantry arquebus.</description>
    <techLevel>Medieval</techLevel>
    <graphicData>
      <texPath>Weapons/Ranged/TA_Banzutsu</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>1.0</drawSize>
    </graphicData>
		<equippedAngleOffset>45</equippedAngleOffset>
    <soundInteract>Interact_Revolver</soundInteract>
    <weaponClasses>
			<li>LongShots</li>
    </weaponClasses>
    <statBases>
			<WorkToMake>11000</WorkToMake>
			<Mass>4</Mass>
			<Bulk>10.7</Bulk>
			<ShotSpread>0.08</ShotSpread>
			<SwayFactor>1.6</SwayFactor>
			<SightsEfficiency>0.95</SightsEfficiency>
			<RangedWeapon_Cooldown>0.9</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>60</Steel>
      <WoodLog>12</WoodLog>
    </costList>
    <verbs>
      <li Class="CombatExtended.VerbPropertiesCE">
        <recoilAmount>2.5</recoilAmount>
        <verbClass>CombatExtended.Verb_ShootCE</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_55CalBall525mps</defaultProjectile>
        <warmupTime>1.4</warmupTime>
        <range>33.9</range>
        <soundCast>Shot_CE_Musket</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <weaponTags>
      <li>NeolithicRangedHeavy</li>
      <li>NeolithicRangedChief</li>
			<li>NeolithicRangedDecent</li>
			<li>MedievalRangedAdvanced</li>
    </weaponTags>
    <comps>
      <li Class="CombatExtended.CompProperties_AmmoUser">
        <magazineSize>1</magazineSize>
        <reloadTime>7.5</reloadTime>
        <ammoSet>AmmoSet_55CalBall525mps</ammoSet>
        <AmmoGenPerMagOverride>4</AmmoGenPerMagOverride>
      </li>
      <li Class="CombatExtended.CompProperties_FireModes">
        <aiAimMode>Snapshot</aiAimMode>
      </li>
    </comps>
    <recipeMaker>
      <recipeUsers>
        <li>FueledSmithy</li>
        <li>ElectricSmithy</li>
      </recipeUsers>
      <researchPrerequisite>CE_Gunpowder</researchPrerequisite>
    </recipeMaker>
    <tools>
      <li Class="CombatExtended.ToolCE">
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>8</power>
        <cooldownTime>1.55</cooldownTime>
        <chanceFactor>1.5</chanceFactor>
        <armorPenetrationBlunt>2.755</armorPenetrationBlunt>
        <linkedBodyPartsGroup>Stock</linkedBodyPartsGroup>
      </li>
      <li Class="CombatExtended.ToolCE">
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>5</power>
        <cooldownTime>2.02</cooldownTime>
        <armorPenetrationBlunt>1.630</armorPenetrationBlunt>
        <linkedBodyPartsGroup>Barrel</linkedBodyPartsGroup>
      </li>
      <li Class="CombatExtended.ToolCE">
        <label>muzzle</label>
        <capacities>
          <li>Poke</li>
        </capacities>
        <power>8</power>
        <cooldownTime>1.55</cooldownTime>
        <armorPenetrationBlunt>2.755</armorPenetrationBlunt>
        <linkedBodyPartsGroup>Muzzle</linkedBodyPartsGroup>
      </li>
    </tools>  
    <modExtensions>
      <li Class="CombatExtended.GunDrawExtension">
				<DrawOffset>0.15,0.15</DrawOffset>
      </li>
    </modExtensions>
  </ThingDef>


</Defs>
