<?xml version="1.0" encoding="UTF-8"?>
<Defs>

  <!-- ==================== Flintlock Pistol ==================== -->

  <ThingDef ParentName="BaseMakeableGun">
    <defName>TA_Tanzutsu</defName>
    <label>tan-zutsu</label>
    <description>pair of quick to load matchlock pistols.</description>
    <techLevel>Medieval</techLevel>
    <graphicData>
      <texPath>Weapons/Ranged/TA_Tanzutsu</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>0.90</drawSize>
    </graphicData>
    <soundInteract>Interact_Revolver</soundInteract>
    <weaponClasses>
      <li>RangedLight</li>
      <li>ShortShots</li>
    </weaponClasses>
    <statBases>
			<WorkToMake>16000</WorkToMake>
			<Mass>2.3</Mass>
			<Bulk>5</Bulk>
			<ShotSpread>0.20</ShotSpread>
			<SwayFactor>1.8</SwayFactor>
			<SightsEfficiency>0.7</SightsEfficiency>
			<RangedWeapon_Cooldown>1.1</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>50</Steel>
      <WoodLog>10</WoodLog>
    </costList>
    <verbs>
      <li Class="CombatExtended.VerbPropertiesCE">
        <recoilAmount>4</recoilAmount>
        <verbClass>CombatExtended.Verb_ShootCE</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_55CalBall300mps</defaultProjectile>
        <warmupTime>0.9</warmupTime>
        <range>12</range>
        <soundCast>Shot_CE_Musket</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <weaponTags>
			<li>MedievalRangedAdvanced</li>
      <li>NeolithicRangedHeavy</li>
      <li>NeolithicRangedChief</li>
      <li>CE_AI_BROOM</li>
    </weaponTags>
    <comps>
      <li Class="CombatExtended.CompProperties_AmmoUser">
        <magazineSize>2</magazineSize>
        <reloadTime>5.5</reloadTime>
        <ammoSet>AmmoSet_55CalBall300mps</ammoSet>
        <AmmoGenPerMagOverride>4</AmmoGenPerMagOverride>
      </li>
      <li Class="CombatExtended.CompProperties_FireModes">
        <aiAimMode>Snapshot</aiAimMode>
      </li>
    </comps>
    <recipeMaker>
      <recipeUsers>
        <li>FueledSmithy</li>
        <li>ElectricSmithy</li>
      </recipeUsers>
      <researchPrerequisite>CE_Gunpowder</researchPrerequisite>
    </recipeMaker>
    <tools>
			<li Class="CombatExtended.ToolCE">
				<label>grip</label>
				<capacities>
				<li>Blunt</li>
				</capacities>
				<power>2</power>
				<cooldownTime>1.54</cooldownTime>
				<chanceFactor>1.5</chanceFactor>
				<armorPenetrationBlunt>0.555</armorPenetrationBlunt>
				<linkedBodyPartsGroup>Grip</linkedBodyPartsGroup>
			</li>
			<li Class="CombatExtended.ToolCE">
				<label>muzzle</label>
				<capacities>
				<li>Poke</li>
				</capacities>
				<power>2</power>
				<cooldownTime>1.54</cooldownTime>
				<armorPenetrationBlunt>0.555</armorPenetrationBlunt>
				<linkedBodyPartsGroup>Muzzle</linkedBodyPartsGroup>
			</li>
    </tools>
		<modExtensions>
			<li Class="CombatExtended.GunDrawExtension" MayRequire="CETeam.CombatExtended">
				<DrawOffset>0.05,0.08</DrawOffset>
			</li>
		</modExtensions>
  </ThingDef>

</Defs>